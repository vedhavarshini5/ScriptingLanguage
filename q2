<!DOCTYPE html>
<html>
<head>
    <title>Number Validation</title>
    <script>
        function validateNumber() {
            let num = document.getElementById("numInput").value;

            if (!/^\d{4}$/.test(num)) {
                alert("Please enter exactly 4 digits");
                return;
            }
            if (num[0] === "0") {
                alert("First digit cannot be zero");
                return;
            }
            for (let i = 0; i < num.length - 1; i++) {
                if (num[i] >= num[i + 1]) {
                    alert("Digits must be in ascending order");
                    return;
                }
            }
            alert("Valid number: " + num);
        }
    </script>
</head>
<body>
    <h2>Enter a 4-Digit Number</h2>
    <input type="text" id="numInput" maxlength="4">
    <button onclick="validateNumber()">Validate</button>
</body>
</html>
